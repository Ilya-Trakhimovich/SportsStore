@model IEnumerable<string>

@Html.ActionLink("Home", "ShowProductList", "Product", null, new { @class = "btn btn-block btn-default btn-lg btn-outline-dark" })

@foreach (var link in Model)
{ 
@Html.RouteLink(link, new
{
    controller = "Product",
    action = "ShowProductList",
    category = link,
    page = 1
}, new
{ 
@class = "btn btn-block btn-default btn-lg btn-outline-primary" + (link == ViewBag.SelectedCategory ? " btn-secondary" : "")
})
}